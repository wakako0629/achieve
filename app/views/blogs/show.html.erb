<h1>ブログ詳細画面</h1>
 <div class="container">
 <div class="row">
<p>タイトル: <%= @blog.title %></p>
<p>内容: <%= @blog.content %></p>
<p>画像:</p>
<p><%= image_tag(@blog.image_url,:size => "250x250") unless @blog.image.blank? %></p>

<% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(blog_id: @blog.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(blog_id: @blog.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
  </div>
  </div>
  
  
