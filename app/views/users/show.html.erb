<html>
<body>

<h1><%= @user.name %>のページ</h1>

<p>メールアドレス: <%= @user.email %></p>
<p><p>画像:</p>
<p><strong>Icon:</strong><%= image_tag @user.icon %></p>


<div class="container">
    <div class="row">
     <% @favorites_blogs.each do |favorites_blog| %>
       <div class="col-xs-12 col-md-6 blog-panel">
         <h2><%="Title:" %><%= favorites_blog.title %></h2>
         <p><%="Content:" %><%= favorites_blog.content %></p>
         <p><%="User:" %><%= favorites_blog.user.name %></p>
         <div class="blog-links">
           <%= link_to 'Show', favorites_blog, class: 'btn btn-default' %>
           <%  if favorites_blog.user_id == current_user.id %>
             <%= link_to 'Edit', edit_blog_path(favorites_blog), class: 'btn btn-info' %>
             <%= link_to 'Destroy', favorites_blog, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
           <% else %>

           <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

  </body>
</html>


